@model Movie
@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h2 class="card-title text-danger">Delete Confirmation</h2>
        <p class="mb-3">Are you sure you want to delete <strong>@Model.Title</strong>?</p>

        <p class="mb-1"><strong>Category:</strong> @Model.Category?.CategoryName</p>
        <p class="mb-1"><strong>Year:</strong> @Model.Year</p>
        <p class="mb-3"><strong>Director:</strong> @Model.Director</p>

        <div class="d-flex gap-2">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.MovieId" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </form>
            <a class="btn btn-outline-secondary" asp-action="CancelDelete">Cancel</a>
        </div>
    </div>
</div>
