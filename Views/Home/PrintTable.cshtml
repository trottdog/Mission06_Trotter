@model List<Movie>

@{
    ViewData["Title"] = "View All Movies";
}

<h1 class="mb-3">List of Movies</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Copied to Plex</th>
                <th>Lent To</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.Category?.CategoryName</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@(x.Edited ? "Yes" : "No")</td>
                    <td>@(x.CopiedToPlex ? "Yes" : "No")</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                    <td class="text-nowrap">
                        <a class="btn btn-sm btn-outline-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
